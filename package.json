{
  "name": "@lexicontraveltech/prg",
  "version": "0.1.2",
  "description": "A simplified, promise-style CLI utility for programs written in nodejs.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "tape test/**/*.test.js | tap-spec",
    "test:watch": "chokidar . -c 'npm test'",
    "cover": "istanbul cover test",
    "ci": "npm run lint && npm test",
    "clean": "rm -rf ./coverage .coverag*",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/LeisureLink/program.git"
  },
  "author": {
    "name": "developers@lexicontravel.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeisureLink/program/issues"
  },
  "homepage": "https://github.com/LeisureLink/program#readme",
  "dependencies": {
    "argh": "^0.1.4",
    "assert-plus": "^1.0.0",
    "debug": "^2.6.8",
    "es6-promisify": "^5.0.0",
    "json-ptr": "^1.0.1",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.19.0",
    "istanbul": "^0.4.5",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  }
}
